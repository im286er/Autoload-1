<?xml version="1.0"?>

<!-- see http://www.phpunit.de/wiki/Documentation -->
<phpunit colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         stopOnFailure="false">
  <testsuite name="autoload">
    <file>test/src/Versionable/Autoload/AutoloadTest.php</file>
  </testsuite>
  <logging>
    <log type="coverage-html"
         target="build/Autoload/test/report/coverage"
         charset="UTF-8"
         yui="true"
         highlights="true"/>
    <log type="testdox-html"
         target="build/Autoload/test/report/testdox.html"/>
    <log type="junit"
         target="build/Autoload/test/report/logfile.xml"
         logIncompleteSkipped="false"/>
  </logging>
</phpunit>
